new_high_score_ = false;
sound_on_ = true;

if file_exists("Save.sav") {
    var LoadFile = file_text_open_read("Save.sav");
    high_score_ = file_text_read_real(LoadFile);
    file_text_close(LoadFile);
} else { high_score_ = 0;
}

fnt_numbers = font_add_sprite(s_lrg_fnt,ord("0"),true,-1);
fnt_smallnumbers = font_add_sprite(s_sml_fnt,ord("0"),true,-1);

