            <string>if playing_ == false {
    if instance_exists(o_control) {
        instance_destroy(o_control)
    }
    if !instance_exists(o_play) {
        instance_create(32,448,o_play);
    }
     if !instance_exists(o_score) {
        instance_create(400,448,o_score);
    }
}

// When the birb dies
if dead_ == true {

    if !instance_exists(o_gameover) {
        instance_create(o_gameover_x,o_gameover_y,o_gameover);
        }
        
        
    if !instance_exists(o_scoreboard) &amp;&amp; scoreboard_afterloss_ = true {    
    instance_create(o_scoreboard_x, o_scoreboard_y, o_scoreboard);
        }
        
        
    if !instance_exists(o_medal) &amp;&amp; instance_exists(o_scoreboard) {
        instance_create(o_medal_x, o_medal_y, o_medal);
        }
        
    if !instance_exists(o_new) &amp;&amp; instance_exists(o_scoreboard) &amp;&amp; new_high_score_= true {
        instance_create(o_new_x, o_new_y, o_new);
        }
        
        
    last_score_ = score
        
    if score &gt; high_score_ &amp;&amp; !instance_exists(o_new) &amp;&amp; instance_exists(o_scoreboard){
        new_high_score_ = true;        
        instance_create(o_new_x,o_new_y,o_new);
        high_score_ = score 
        scr_save_score();
        }   
        
         
}

// When you hit play (check the play button's obj code for switching from not playing to playing)

if playing_ == true {
    if instance_exists(o_new){
        instance_destroy(o_new)
    }
    if instance_exists(o_medal) {
        instance_destroy(o_medal)
    }
}

// Scoreboard shenanegans 

if mouse_enter_score_ = true &amp;&amp; mouse_check_button_pressed(mb_left) {
    if !instance_exists(o_scoreboard) {
        hide_scoreboard_ = false;
        instance_create(o_scoreboard_x,o_scoreboard_y,o_scoreboard);
        instance_create(o_medal_x, o_medal_y, o_medal);
    } else {
        hide_scoreboard_ = true;
        instance_destroy(o_scoreboard);
        instance_destroy(o_medal);
    }    
}
